<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <RelativeLayout
        android:id="@+id/rl_time_date"
        android:layout_width="80dp"
        android:padding="8dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/noteDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/noteDate"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteDay"
            android:text="Date"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/noteTime"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:text="Time" />

    </RelativeLayout>

    <LinearLayout

        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/rl_time_date"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />
        <TextView
            android:maxLines="3"

            android:id="@+id/note_preview"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dummy_note" />


    </LinearLayout>



</RelativeLayout>